<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="468dp"
        android:text="返回" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:id="@+id/btn_yes"
        android:layout_x="288dp"
        android:layout_y="469dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="記錄比賽"
        android:id="@+id/textView"
        android:layout_x="135dp"
        android:layout_y="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="對手隊伍"
        android:id="@+id/textView2"
        android:layout_x="6dp"
        android:layout_y="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="比賽日期"
        android:id="@+id/textView3"
        android:layout_x="6dp"
        android:layout_y="94dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="記錄類別"
        android:id="@+id/textView4"
        android:layout_x="7dp"
        android:layout_y="141dp" />

    <RadioGroup
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="141dp"
        android:orientation="horizontal"
        android:id="@+id/rdogrp_contest_type">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基礎"
            android:checked="true" 
            android:id="@+id/rdo_basic" />
        	

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="專業"
            android:checked="false" 
            android:id="@+id/rdo_specialty" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="發球方"
        android:id="@+id/textView5"
        android:layout_x="8dp"
        android:layout_y="184dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="113dp"
        android:layout_y="176dp"
        android:orientation="horizontal"
        android:id="@+id/rdogrp_service">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我方"
             android:checked="true" 
            android:id="@+id/rdo_our" />

        <RadioButton
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="對方"
            android:checked="false" 
            android:id="@+id/rdo_they" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="上場球員"
        android:id="@+id/textView6"
        android:layout_x="132dp"
        android:layout_y="217dp" />

    <EditText
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:id="@+id/data_opponent"
        android:layout_x="120dp"
        android:layout_y="44dp" />

    <EditText
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:id="@+id/data_contest_date"
        android:layout_x="119dp"
        android:layout_y="83dp" />

    <ListView
        android:id="@+id/player_list"
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:layout_x="-1dp"
        android:layout_y="240dp" />

</AbsoluteLayout>
